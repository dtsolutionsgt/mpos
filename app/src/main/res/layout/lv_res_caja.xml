<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context=".Img_view_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/frame_btn">


        <TextView
            android:id="@+id/lblV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:minWidth="120dp"
            android:text="T10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="64sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblV5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:paddingBottom="10dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/lblV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblV2"
            android:layout_alignParentLeft="false"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView104"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView102"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblV5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@+id/lblV2"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/btn_caja" />

        <ImageView
            android:id="@+id/imageView104"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/lblV2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_bills" />

        <TextView
            android:id="@+id/textView273"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblV4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>

