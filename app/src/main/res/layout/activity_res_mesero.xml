<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResMesero">

    <RelativeLayout
        android:id="@+id/relmmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/relRoad"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/frame_rect_blue">

            <ImageView
                android:id="@+id/imgTitLogo2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/mpos_blanco" />

            <ImageView
                android:id="@+id/imageView71a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/nowifi"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/rel00a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView178b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal"
                    android:text="Grupo de mesas"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView179b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/textView178b"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/spinner_style_white"
                    android:clickable="true"
                    android:gravity="center"
                    android:minWidth="350dp"
                    android:onClick="doGrupo"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="50dp"
                    android:text="Area de mesas"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="false"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textView178a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView179a"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal"
                    android:text="Mesas abiertas"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView179a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView71a"
                    android:text="00"
                    android:textColor="#FFFFFF"
                    android:textSize="52sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/relbotpan"
            android:layout_below="@+id/relRoad"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="4dp"
            android:numColumns="4" />

        <RelativeLayout
            android:id="@+id/relbotpan"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/frame_rect_blue">

            <TextView
                android:id="@+id/textView179b2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="doGrupo"
                android:text="Nombre mesero"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView196"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:text="TextView"
                android:visibility="invisible" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView96"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/imageView87"
            android:layout_alignBottom="@+id/gridView1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:onClick="doExit"
            android:padding="5dp"
            android:src="@drawable/btn_exit" />

        <ImageView
            android:id="@+id/imageView123"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/gridView1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:clickable="true"
            android:onClick="doSincon"
            android:padding="10dp"
            android:src="@drawable/nowifi3" />

        <TextView
            android:id="@+id/textView213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView96"
            android:layout_alignBottom="@+id/gridView1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center_horizontal"
            android:text="Salir"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView320"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView123"
            android:layout_alignStart="@+id/imageView123"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:onClick="doSincon"
            android:text="Sin conexiÃ³n"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView106"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/imageView87"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:onClick="doBarril"
            android:padding="10dp"
            android:src="@drawable/barril"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView221"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView106"
            android:layout_alignStart="@+id/imageView106"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_horizontal"
            android:text="Barriles"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />
</RelativeLayout>
</RelativeLayout>