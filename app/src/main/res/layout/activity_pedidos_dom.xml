                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal"
                    android:text="Pago pendiente"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView71a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="18dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/pago_pendiente" />

                <TextView
                    android:id="@+id/textView179a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView71a"
                    android:text="00"
                    android:textColor="#FFFFFF"
                    android:textSize="52sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="doExit"
                android:padding="10dp"
                android:src="@drawable/break_w" />

            <RelativeLayout
                android:id="@+id/relPed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="200dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/imageView69">

                <RelativeLayout
                    android:id="@+id/rel01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/textView178"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/textView179"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center_horizontal"
                        android:text="Nuevos"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageView71"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="false"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="0dp"
