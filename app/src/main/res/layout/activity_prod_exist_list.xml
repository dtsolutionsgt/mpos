<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    tools:context=".ProdExistList">

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:background="@drawable/frame_rect_whitestrip">

        <RelativeLayout
            android:id="@+id/relRoad"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/top_strip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"></RelativeLayout>

            <TextView
                android:id="@+id/lblTit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="870dp"
                android:layout_marginLeft="25dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/imgTitLogo"
                android:layout_toRightOf="@+id/imgRoadTit"
                android:gravity="center_horizontal"
                android:text="Existencias en almacenes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView325"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relRoad"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#202020"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView326"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/frame_btn"
            android:clickable="true"
            android:onClick="doExit"
            android:paddingStart="40dp"
            android:paddingTop="10dp"
            android:paddingEnd="40dp"
            android:paddingBottom="10dp"
            android:text="OK"
            android:textColor="#202020"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView326"
            android:layout_below="@+id/textView325"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="10dp" />
    </RelativeLayout>
</RelativeLayout>