<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Img_view_list">

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:paddingStart="10dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#575757"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lblCant"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="3dp"
        android:text="MODIFICADO"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#575757"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblPNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_toLeftOf="@+id/lblFecha"
        android:gravity="right"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:text="99,999.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblCFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="55dp"
        android:layout_marginEnd="103dp"
        android:layout_toLeftOf="@+id/lblETipo"
        android:minWidth="80dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#575757"
        android:textSize="38sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="5dp"
        android:gravity="right"
        android:text="99.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#575757"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblTot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_alignParentRight="true"
        android:layout_marginStart="272dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/lblFecha"
        android:text="99,999.99"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#1B76B9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblPeso"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCFact"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:text="999"
        android:textColor="#575757"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView101"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/lblETipo"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:src="@drawable/cuenta" />

    <ImageView
        android:id="@+id/imageView103"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:alpha="0.5"
        android:src="@drawable/dish_ready" />

</RelativeLayout>