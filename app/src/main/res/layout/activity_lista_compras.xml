<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaCompras">

        <RelativeLayout
            android:id="@+id/relRoad"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            lblCFact29

            <TextView
                android:id="@+id/lblDescrip2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/imgTitLogo"
                android:layout_toEndOf="@+id/imgRoadTit"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="5dp"
                android:text="Orden de compra"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relRoadbar"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:background="#9A999E"></RelativeLayout>

            <ImageView
                android:id="@+id/imgTitLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_panel" />

            <ImageView
                android:id="@+id/imgRoadTit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relRoadbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:src="@drawable/existencias" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relbotpan"
            android:layout_below="@id/relRoad"
            android:layout_marginBottom="5dp"
            android:fillViewport="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/llFechas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relRoad"
                    android:layout_marginTop="0dp">

                    <RelativeLayout
                        android:id="@+id/llFechaIni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/relalm1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                            <TextView
                                android:id="@+id/textView268"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="110dp"
                                android:layout_toEndOf="@+id/lblCFact72"
                                android:background="@drawable/spinner_style"
                                android:clickable="true"
                                android:maxWidth="200dp"
                                android:onClick="doAlmacenes"
                                android:paddingStart="10dp"
                                android:text="Seleccione un almacen . . ."
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lblCFact72"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/blue_strip"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="Estado :"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#FFFFFF"
                                android:textSize="21sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/lblCFact30"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/relalm1"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/blue_strip"
                            android:gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:text="Inicio :"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textSize="21sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/lblDateini2"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/lblCFact30"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/lblCFact30"
                            android:background="@drawable/frame_btn"
                            android:gravity="center"
                            android:onClick="showDateDialog1"
                            android:text="00/00/0000"
                            android:textSize="21dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblCFact29"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/lblCFact30"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/blue_strip"
                            android:gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:text="Fin :    "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#FFFFFF"
                            android:textSize="21sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/lblDatefin2"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_alignTop="@+id/lblCFact29"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/lblCFact29"
                            android:background="@drawable/frame_btn"
                            android:gravity="center"
                            android:onClick="showDateDialog2"
                            android:text="00/00/0000"
                            android:textSize="21dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </RelativeLayout>

                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llFechas"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp">

                </ListView>

                <ImageView
                    android:id="@+id/imgImg5"
                    android:layout_width="105dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/relRoad"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:onClick="nuevo"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/mas" />

            </RelativeLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar6"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/relbotpan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:background="@layout/blue_strip">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:paddingRight="10dp"
                android:text="DTSolutions"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>