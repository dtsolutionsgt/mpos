<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Img_view_list">

    <TextView
        android:id="@+id/lblPNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPValor"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/lblPrecio"
        android:layout_weight="1"
        android:width="0dip"
        android:gravity="right"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollHorizontally="false"
        android:text="Descripción"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblPValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblPNum"
        android:layout_alignBottom="@+id/lblPNum"
        android:layout_marginStart="384dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/lblETipo"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="1000,00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblETipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPValor"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/lblCant"
        android:layout_alignBottom="@id/lblCant"
        android:layout_marginLeft="253dp"
        android:layout_marginBottom="-4dp"
        android:layout_toRightOf="@id/lblCant"
        android:text="0.00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>