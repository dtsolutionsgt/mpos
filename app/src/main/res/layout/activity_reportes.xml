<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reportes">



    <RelativeLayout
        android:id="@+id/relRoad"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RelativeLayout
            android:id="@+id/relRoadbar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#9A999E"></RelativeLayout>

        <ImageView
            android:id="@+id/imgTitLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_panel" />

        <ImageView
            android:id="@+id/imgRoadTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relRoadbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:onClick="test"
            android:padding="5dp"
            android:src="@drawable/existencias" />

        <TextView
            android:id="@+id/lblTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgRoadTit"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Reporte"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#1A8AC6" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relFilters"
        android:layout_width="836dp"
        android:layout_height="186dp"
        android:layout_below="@+id/relRoad"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/layout_filter"
        tools:context=".Reportes">

        <Spinner
            android:id="@+id/spinProd"
            android:layout_width="347dp"
            android:layout_height="53dp"
            android:layout_below="@+id/lblDateini"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/txtProdName"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/spinProd"
            android:layout_alignBottom="@+id/spinProd"
            android:layout_marginStart="72dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/spinProd"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCFact14"
            android:layout_width="142dp"
            android:layout_height="38dp"
            android:layout_below="@+id/textView129"
            android:layout_alignStart="@+id/relFilters"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/blue_strip"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Fecha inicio :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblDateini"
            android:layout_width="204dp"
            android:layout_height="39dp"
            android:layout_alignTop="@+id/lblCFact14"
            android:layout_alignBottom="@+id/lblCFact16"
            android:layout_marginStart="17dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/lblCFact14"
            android:background="@drawable/frame_btn"
            android:gravity="center"
            android:onClick="showDateDialog1"
            android:text="00/00/0000"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCFact15"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/lblDateini"
            android:layout_alignEnd="@+id/lblCFact14"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="501dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-410dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/lblDateini"
            android:background="@drawable/blue_strip"
            android:gravity="center|center_vertical"
            android:paddingLeft="10dp"
            android:text="Fecha fin :    "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblDatefin"
            android:layout_width="202dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/lblDateini"
            android:layout_alignTop="@+id/lblCFact15"
            android:layout_alignBottom="@+id/lblCFact18"
            android:layout_marginStart="427dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/frame_btn"
            android:gravity="center"
            android:onClick="showDateDialog2"
            android:text="00/00/0000"
            android:textSize="21dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnImp"
            android:layout_width="121dp"
            android:layout_height="88dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="153dp"
            android:clickable="true"
            android:onClick="GeneratePrint"
            android:padding="5dp"
            android:src="@drawable/reimpresion48" />

        <TextView
            android:id="@+id/txtBtn"
            android:layout_width="115dp"
            android:layout_height="46dp"
            android:layout_below="@+id/btnImp"
            android:layout_alignStart="@+id/btnImp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="149dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView129"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="106dp"
            android:text="Filtros"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtFact"
        android:layout_width="790dp"
        android:layout_height="1086dp"
        android:layout_below="@+id/relFilters"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="top|center_vertical"
        android:scrollbars="vertical"
        android:typeface="monospace" />

</RelativeLayout>

